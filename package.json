{
  "name": "my-bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^18"
  },
  "dependencies": {
    "@cap-js/hana": "^1",
    "@cap-js/sqlite": "^1",    
    "@sap/cds": "^8",
    "express": "^4",
    "hdb": "^0.19.0",
    "@sap/xssec": "^3",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@sap/cds-dk": "^8"
  },
  "scripts": {    
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql",
        "credentials": {
          "database": "db.sqlite"
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "kind": "hana",
        "impl": "@sap/cds-hana",
        "deploy-format": "hdbtable",
        "syntax": "hdi"
      },
      "[hybrid]": {
        "kind": "hana",
        "impl": "@sap/cds-hana",
        "deploy-format": "hdbtable",
        "model": "db/hana",
        "syntax": "hdi"
      }
    },
    "features": {
      "fiori_preview": true
    }
  }
}